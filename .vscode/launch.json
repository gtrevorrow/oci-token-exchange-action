{
    "configurations": [
      
        
        {
            "name": "Launch via NPM",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },

        {
            "type": "node-terminal",
            "name": "Run Script: build",
            "request": "launch",
            "command": "npx tsc",
            "cwd": "${workspaceFolder}"
        }
    ]
}